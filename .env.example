# Copy this to .env and fill values
# Firebase: set GOOGLE_APPLICATION_CREDENTIALS to the path of the service account JSON
# or set the service account JSON content in GOOGLE_SERVICE_ACCOUNT_JSON

# Server
PORT=8080

# Cloudflare R2 (S3-compatible) settings
R2_ENDPOINT=https://<your-account-id>.r2.cloudflarestorage.com
R2_REGION=auto
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret
R2_BUCKET=your_bucket_name

# Postgres (connection string)
DATABASE_URL=postgres://user:password@host:5432/dbname

# Firebase (optional) - recommended: set GOOGLE_APPLICATION_CREDENTIALS env var to service account JSON file
# If you prefer you can set the JSON as a string in GOOGLE_SERVICE_ACCOUNT_JSON
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/serviceAccountKey.json
# or
# GOOGLE_SERVICE_ACCOUNT_JSON={"type":"...","project_id":"...",...}
